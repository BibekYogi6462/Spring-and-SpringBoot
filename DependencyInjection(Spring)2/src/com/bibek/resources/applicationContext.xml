<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean class="com.bibek.beans.Address" id="addrId">
       <constructor-arg value="123"/>
       <constructor-arg value="Kathmandu"/>
       <constructor-arg value="456"/>
    
    </bean>
    
    <bean class="com.bibek.beans.Student" id="stdId">
       <constructor-arg value="Bibek"/>
       <constructor-arg value="04"/>
       <constructor-arg ref="addrId"/>
    
    </bean>

</beans>